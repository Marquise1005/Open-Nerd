@{
    ViewBag.Title = "Home";
}

<body class="index-body">
    <div class="jumbotron" id="homepage">
        <h1>Open Nerd</h1>
        <p class="lead"> Open Nerd the imaginary book creator </p>
    </div>

    <!--begin Bootstrap Carousel-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5200">

        <!-- Wrapper for slides -->

        <div class="carousel-inner" role="listbox">

            <div class="item active">

                <img src="https://cdn.aarp.net/content/dam/aarp/money/budgeting_savings/2016/04/1140-yeager-sell-your-used-books.imgcache.rev6feda141288df73e8fd100822bb375ea.jpg" alt="...">

                <div class="carousel-caption">

                    <h3>@Html.ActionLink("Author", "Index", "Author", null, new { style = "color:white" })</h3>

                    <p>Add an Author for your book</p>

                </div>

            </div>

            <div class="item">

                <img src="https://cdn1.medicalnewstoday.com/content/images/articles/320/320377/a-woman-reading-a-book.jpg" alt="...">

                <div class="carousel-caption">

                    <h3>@Html.ActionLink("Product", "Index", "Product", null, new { style = "color:white" })</h3>

                    <p>Create your Product here</p>

                </div>

            </div>

            <div class="item">

                <img src="https://si.wsj.net/public/resources/images/B3-BO106_heitma_GR_20180829100408.jpg" alt="...">

                <div class="carousel-caption">

                    <h3>@Html.ActionLink("Transaction", "Index", "Transaction", null, new { style = "color:white" })</h3>

                    <p>Here you can create a price for the book and it will be stored</p>

                </div>

            </div>


        </div>



        <!-- Left and right controls -->

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">

            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>

            <span class="sr-only">Previous</span>
        </a> <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">

            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>

            <span class="sr-only">Next</span>
        </a>

        <!--end carousel-->

    </div>
</body>
